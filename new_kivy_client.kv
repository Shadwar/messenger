#:kivy 1.10.0

<Contact>:
#    background_normal: ''
#    background_color: 1, 1, 1, 1
    size_hint: 1, None
    size: 180, 35
    color: 0, 0, 0, 1
    font_size: 18

    Label:
        id: login
#        x: self.parent.x + 5
#        y: self.parent.y + 5

    Image:
        id: image_avatar
        size: 25, 25
        x: self.parent.x + 5
        y: self.parent.y + 5


<ContactList>:
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_scroll_x: False

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        id: container
        cols: 1
        padding: 10
        spacing: 5
        height: self.minimum_height
        size_hint: 1, None
        do_scroll_x: False

<Test>:
    canvas:
        Color:
            rgba: 0, .3, .8, .5
        Rectangle:
            pos: 0, 0
            size: self.width, self.height

    ContactList:
        id: contact_list
        pos: 10, 100
        size: 200, root.height-110
